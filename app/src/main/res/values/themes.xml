<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyLibrary" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_400</item>
        <item name="colorPrimaryVariant">@color/cyan_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/amber_300</item>
        <item name="colorSecondaryVariant">@color/amber_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/grey_200</item>
        <item name="colorOnError">@color/red_700</item>
    </style>

    <!--      Text Styling      -->
    <style name="TextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  Color  -->
    <style name="TextContent.Primary">
        <item name="android:textColor">@color/cyan_800</item>
    </style>
    <style name="TextContent.Muted">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!--  Title  -->
    <style name="TextContent.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Title.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <!--  Table  -->
    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TableRow.About">
        <item name="android:background">@color/cyan_50</item>
        <item name="android:radius">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="TableHead">
        <item name="android:textColor">@color/cyan_400</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="TableData">
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--  Button Styling  -->
    <style name="Button" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Icon">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/grey_200</item>
    </style>
    <style name="Button.Icon.Share">
        <item name="android:drawableLeft">@drawable/ic_baseline_share_24</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Button.Icon.Favorite">
        <item name="android:drawableLeft">@drawable/favorite</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textOff">@string/favorite</item>
        <item name="android:textOn">@string/favorite</item>
    </style>

    <!--  Rating Bar  -->
    <style name="RatingBar" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">0</item>
        <item name="android:stepSize">0.1</item>
    </style>

    <!--  Splash Screen  -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="colorPrimary">@color/cyan_800</item>
        <item name="colorPrimaryDark">@color/cyan_900</item>
    </style>
</resources>